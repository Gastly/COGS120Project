<!DOCTYPE html>
<html>
    <head>
        <title>Workout Meals</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/home_style.css" rel="stylesheet">
        <link href="/css/bootstrap.css" rel="stylesheet">
        <link href="/css/bootstrap-theme.css" rel="stylesheet">
        <script src="https://code.jquery.com/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
	    <script src="/js/dynamicload.js"></script>
    </head>

<body>
    <!--Header-->
    <header class="container bar" id="topbar">
        <h1 class="text-center">The Meal Preppers</h1>
    </header>
    <hr>
    <div class="container" style="margin: 0 auto;">
        <!--heading-->
        <h3 class="text-center" style="">Post-Workout Meals</h3>
        <hr>
        <div class="mealcontainer" style="">
            {{#each workouts}}
    		<div class="meal" id="{{id}}">
    			<div class="thumbnail" style="max-width: 500px;">
    				<a href="#">
    					<img src={{Image}} class="img-responsive" style="max-height: 200px; width:100%; height: 100%">
                        <h3>{{Title}}</h3>
    				</a>
                    <button id="button-{{id}}" type="button">Favorite</button>
                    <div class="details"></div>
    			</div>
    		</div>
    		{{/each}}
        </div>
        
    </div>
    <hr>
    <br>
    <br>

    <!--Footer icons-->
    <footer class="container bar" id="fixedfooter">
            <div class="row">
                <a href="index"><div class="col-xs-6" style="width:33%">
                    <img class="footer-icon" src="images/back.svg" style="width:100%">
                </div></a>
                <a href="index"><div class="col-xs-6" style="width:33%">
                    <img class="footer-icon" src="images/home.svg" style="width:100%">
                </div></a>
                <a href="favorite"><div class="col-xs-6" style="width:33%">
                    <img class="footer-icon" src="images/heart.svg" style="width:100%">
                </div></a>
            </div>
    </footer>

</body>
</html>