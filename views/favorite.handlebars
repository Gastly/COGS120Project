<!DOCTYPE html>
<html>
    <head>
        <title id="title">Favorites</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/home_style.css" rel="stylesheet">
        <link href="/css/bootstrap.css" rel="stylesheet">
        <link href="/css/bootstrap-theme.css" rel="stylesheet">
        <script src="https://code.jquery.com/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/favorite.js"></script>
    </head>

<body>
    <!--Header-->
    <header class="container bar" id="topbar">
        <h1 class="text-center">The Meal Preppers</h1>
    </header>
    <hr>
    <div class="container">
        <!--back button + heading-->
        <div class="row">
            <a href="index"><div class="col-xs-6" style="width: 25%">
                <img class="thumbnail" src="images/back.svg" style="width:80%">
            </div></a>
            <div class="col-xs-6">    
                <h3 class="text-center">Favoritesüòç</h3>
            </div>
        </div>
        <hr>
        <hr>
        {{#each favorites}}
        <div class="meal" id="favorite-{{id}}" style="display: none">
            <div class="thumbnail">
                <a href="#">
                    <img src={{Image}} class="img-responsive" style="max-height: 200px; width:100%; height: 100%">
                    <h3>{{Title}}</h3>
                </a>
                <div class="details"></div>
            </div>
        </div>
        {{/each}}
        
    </div>
    <br>
    <br>
    <br>
    <br>     
    <br>

    <!--Footer icons-->
    <footer class="container bar" id="fixedfooter">
            <div class="row">
                <a href="index"><div class="col-xs-6" style="width:50%">
                    <img class="footer-icon" src="images/home.svg" style="width:100%">
                </div></a>
                <a href="favorite"><div class="col-xs-6" style="width:50%">
                    <img class="footer-icon" src="images/heart.svg" style="width:100%">
                </div></a>
            </div>
    </footer>

</body>
</html>



