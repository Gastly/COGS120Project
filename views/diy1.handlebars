<!DOCTYPE html>
<html>
    <head>
        <title>DIY Meals</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/home_style.css" rel="stylesheet">
        <link href="/css/bootstrap.css" rel="stylesheet">
        <link href="/css/bootstrap-theme.css" rel="stylesheet">
        <script src="https://code.jquery.com/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
	    <script src="/js/diy1dl.js"></script>
    </head>

<body>
    <!--Header-->
    <header class="container bar" id="topbar">
        <h1 class="text-center">The Meal Preppers</h1>
    </header>
    <hr>
    <div class="container"> 
        <!--back button + heading-->
            <div>    
                <h4 class="text-center">Your DIY Meals:</h4>
            </div>
        <hr>
        {{#each diy1s}}
		<div  class="meal" id="diy-{{id}}">
			<div class="thumbnail">
				<a href="#">
					<img src={{Image}} class="img-responsive" style="max-height: 200px; width:100%; height: 100%">
                    <h3>{{Title}}</h3>
				</a>
                <button id="button-{{id}}" type="button">Favorite</button>
                <div class="details"></div>
			</div>
		</div>
		{{/each}}
        
        <!--Search Again Button-->
        <div>    
                <p class="text-center">Want to see different meals?</p>
            </div>
        <a href="#"><div class="container" style="text-align:center;">
            <button type="button" class="btn" style="width:40%" id="searchagain">Search Again</button>
        </div></a>
    </div>
    <br>
    <br>
    <br>
    <br>

    <!--Footer icons-->
    <footer class="container bar" id="fixedfooter">
            <div class="row">
                <a href="index"><div class="col-xs-6" style="width:33%">
                    <img class="footer-icon" src="images/back.svg" style="width:100%">
                </div></a>
                <a href="index"><div class="col-xs-6" style="width:33%">
                    <img class="footer-icon" src="images/home.svg" style="width:100%">
                </div></a>
                <a href="favorite"><div class="col-xs-6" style="width:33%">
                    <img class="footer-icon" src="images/heart.svg" style="width:100%">
                </div></a>
            </div>
    </footer>

</body>
</html>